{
  "name": "devhub-api",
  "version": "1.0.0",
  "description": "the content api",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "jest": {
    "verbose": false,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/__tests__/src/"
    ]
  },
  "scripts": {
    "test": "jest",
    "build": "babel src -d dist --copy-files",
    "dev": "nodemon --exec babel-node src/serve.js",
    "start": "node dist/serve.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/devhub-app-web.git"
  },
  "keywords": [
    "content"
  ],
  "author": "Patrick Simonian",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcgov/devhub-app-web/issues"
  },
  "homepage": "https://github.com/bcgov/devhub-app-web#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.5.3",
    "lint-staged": "^10.2.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@bcgov/common-nodejs-utils": "^0.1.21",
    "@octokit/rest": "^18.0.6",
    "ajv": "^6.12.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "js-base64": "^2.5.2",
    "jsonwebtoken": "^8.5.1",
    "octokit-create-pull-request": "^1.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "slugify": "^1.4.0",
    "snake-case": "^3.0.3"
  }
}
