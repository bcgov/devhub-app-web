{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "description": "Deployment template for a mariadb server with persistent storage.",
      "tags": "${NAME}"
    },
    "name": "${NAME}-persistent-template"
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-db"
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-db",
        "generation": 1,
        "labels": {
          "app": "${NAME}",
          "service": "${NAME}${SUFFIX}-db",
          "template": "matomo-template"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "timeoutSeconds": 600
          },
          "resources": {},
          "activeDeadlineSeconds": 21600
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}-db"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${NAME}-db:${VERSION}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "name": "${NAME}${SUFFIX}-db"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "${NAME}${SUFFIX}-db"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "${NAME}${SUFFIX}-data-db",
                "persistentVolumeClaim": {
                  "claimName": "${NAME}${SUFFIX}-db"
                }
              }
            ],
            "containers": [
              {
                "name": "${NAME}-db",
                "image": "",
                "ports": [
                  {
                    "containerPort": 3306,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "MYSQL_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${NAME}${SUFFIX}-db",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${NAME}${SUFFIX}-db",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${NAME}${SUFFIX}-db",
                        "key": "database-root-password"
                      }
                    }
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${NAME}${SUFFIX}-db",
                        "key": "database-name"
                      }
                    }
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "${CPU_REQUEST}",
                    "memory": "${MEMORY_REQUEST}"
                  },
                  "limits": {
                    "cpu": "${CPU_LIMIT}",
                    "memory": "${MEMORY_LIMIT}"
                  }
                },
                "volumeMounts": [
                  {
                    "name": "${NAME}${SUFFIX}-data-db",
                    "mountPath": "${MOUNT_PATH}"
                  }
                ],
                "livenessProbe": {
                  "tcpSocket": {
                    "port": 3306
                  },
                  "initialDelaySeconds": 30,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "exec": {
                    "command": [
                      "/bin/sh",
                      "-i",
                      "-c",
                      "MYSQL_PWD=\"$MYSQL_PASSWORD\" mysql -h 127.0.0.1 -u $MYSQL_USER -D $MYSQL_DATABASE -e 'SELECT 1'"
                    ]
                  },
                  "initialDelaySeconds": 5,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
            "schedulerName": "default-scheduler"
          }
        }
      },
      "status": {
        "latestVersion": 0,
        "observedGeneration": 0,
        "replicas": 0,
        "updatedReplicas": 0,
        "availableReplicas": 0,
        "unavailableReplicas": 0
      }
    },
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-db",
        "labels": {
          "app": "${NAME}",
          "name": "${NAME}${SUFFIX}-db"
        }
      },
      "spec": {
        "storageClassName": "${PERSISTENT_VOLUME_CLASS}",
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${PERSISTENT_VOLUME_SIZE}"
          }
        }
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-db",
        "labels": {
          "app": "${NAME}",
          "name": "${NAME}${SUFFIX}-db"
        }
      },
      "stringData": {
        "database-root-password": "${MYSQL_ROOT_PASSWORD}",
        "database-password": "${MYSQL_PASSWORD}",
        "database-user": "${MYSQL_USER}",
        "database-name": "${MYSQL_DATABASE}"
      },
      "type": "Opaque"
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-db",
        "labels": {
          "app": "${NAME}",
          "service": "${NAME}${SUFFIX}-db",
          "template": "matomo-template"
        },
        "annotations": {
          "template.openshift.io/expose-uri": "mysql://{.spec.clusterIP}:{.spec.ports[?(.name==\"mariadb\")].port}"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "mariadb",
            "protocol": "TCP",
            "port": 3306,
            "targetPort": 3306
          }
        ],
        "selector": {
          "name": "${NAME}${SUFFIX}-db"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the OpenShift resources associated to the server instance.",
      "required": true,
      "value": "matomo-db"
    },
    {
      "name": "SUFFIX",
      "displayName": "A name suffix used for all objects",
      "required": false,
      "value": "dev"
    },
    {
      "name": "IMAGE_NAMESPACE",
      "displayName": "Image Namespace",
      "required": true,
      "description": "The namespace of the OpenShift project containing the imagestream for the application.",
      "value": "myproject"
    },
    {
      "name": "VERSION",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "prod"
    },
    {
      "name": "MYSQL_DATABASE",
      "displayName": "MariaDB Database Name",
      "description": "The name of the MariaDB database.",
      "required": true,
      "value": "matomo"
    },
    {
      "name": "MYSQL_USER",
      "displayName": "MariaDB Connection Username",
      "description": "Username for MariaDB user that will be used for accessing the database.  Needs to be base64 encoded/",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{10}"
    },
    {
      "name": "MYSQL_PASSWORD",
      "displayName": "MariaDB Connection Password",
      "description": "Password for the MariaDB connection user.  Needs to be base64 encoded/",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{10}"
    },
    {
      "name": "MYSQL_ROOT_PASSWORD",
      "displayName": "MariaDB Admin Password",
      "description": "Password for the MariaDB administrative account.  Needs to be base64 encoded.",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "MOUNT_PATH",
      "displayName": "Mount Path",
      "description": "The path to mount the persistent volume.",
      "required": true,
      "value": "/var/lib/mysql/data"
    },
    {
      "name": "PERSISTENT_VOLUME_SIZE",
      "displayName": "Persistent Volume Size",
      "description": "The size of the persistent volume , e.g. 512Mi, 1Gi, 2Gi.",
      "required": true,
      "value": "1Gi"
    },
    {
      "name": "PERSISTENT_VOLUME_CLASS",
      "displayName": "Persistent Volume Class name",
      "description": "The class of the volume; gluster-file, gluster-block, gluster-file-db",
      "required": false,
      "value": "gluster-file-db"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "Resources CPU Request",
      "description": "The resources CPU request (in cores) for this build.",
      "required": true,
      "value": "100m"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "Resources CPU Limit",
      "description": "The resources CPU limit (in cores) for this build.",
      "required": true,
      "value": "250m"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Resources Memory Request",
      "description": "The resources Memory request (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "100Mi"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Resources Memory Limit",
      "description": "The resources Memory limit (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "512Mi"
    }
  ]
}
